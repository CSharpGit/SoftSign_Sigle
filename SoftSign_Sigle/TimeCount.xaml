        <Button  HorizontalAlignment="Left" Margin="46,172,0,0" VerticalAlignment="Top" Width="71" Style="{DynamicResource btn-success}" Content="继续" Click="Button_Click" />
        <Label x:Name="text" Content="还在吗？亲" HorizontalAlignment="Left" Height="24" Margin="46,21,0,0" VerticalAlignment="Top" Width="200" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="/SoftSign_Sigle;component/bin/Debug/#DS-Digital" Foreground="LightGoldenrodYellow"/>
       

    </Grid>
</Window>
